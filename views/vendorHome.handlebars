{{! new prod form }}
<form id="newProdForm">
  <h3>New Product Entry</h3>
  <div>
    <label for="newProd-name">Name:</label>
    <input class="form-input" type="text" id="newProd-name" />
  </div>
  <div>
    <label for="newProd-desciprion">Description:</label>
    <input class="form-input" type="text" id="newProd-description" />
  </div>
  <div>
    <label for="newProd-price">Price:</label>
    <input class="form-input" type="text" id="newProd-price" />
  </div>
  <div>
    <label for="newProd-stock">Quantity:</label>
    <input class="form-input" type="number" id="newProd-stock" min ="0">
  </div>
  <div>
    <label for="newProd-image">Image URL:</label>
    <input class="form-input" type="text" id="newProd-image" />
  </div>
  <div>
   
    <label for="newProd-category">Category ID:</label>
    <input class="form-input" type="number" id="newProd-category" min="1" max="19" />
  </div>
  <div>
    <button class="btn" type="submit">New Product Create</button>
  </div>
</form>
