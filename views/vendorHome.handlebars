{{! edit product likely redirect }}
<div>
  <form>
    <div >
      <label>edit view:</label>
      <input class="box" id="toggleBox" type="checkbox">
    </div>
    
  </form>
 <div id="editForm">
  {{#each newData}}
    <form id="devView" data-id="{{id}}">
      <div >
        <label>ID:</label>
        <input class = "ID" value ="{{id}}" readonly>
      </div>
    
       <div>
        <label>Name:</label>
        <input class="Nam" value="{{name}}">
      </div>
        <div>
        <label>Description:</label>
        <input class="Desc" value="{{description}}">
      </div>
       <div>
        <label>Price:</label>
        <input class="Pric" value="{{price}}">
      </div>
       <div>
        <label>Quantity:</label>
        <input class="Quant" value="{{stock}}">
      </div>
      <div><button >edit</button></div>
      
      </form>
  {{/each}}
  </div>
  <div id="normal">
    {{#each newData}}
      <div >
        <p>id:{{id}}</p>
        <p>Name: {{name}} </p>
        <p>Description: {{description}}</p>
        <p>Price: {{price}}</p>
        <p>Quantity: {{stock}}</p>
      </div>
    {{/each}}
    </div>
 </div>


