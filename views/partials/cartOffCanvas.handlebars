<div class="navbar navbar-dark fixed-top">
     <div class="container-fluid">
          <a class="navbar-brand" href="#"></a>

          <div
               class="offcanvas offcanvas-end bg-dark text-white"
               tabindex="-1"
               id="offcanvasDarkNavbar"
               aria-labelledby="offcanvasDarkNavbarLabel"
               data-bs-scroll="true"
               data-bs-backdrop="true"
          >
               <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">Cart</h5>
                    <button
                         type="button"
                         class="btn-close text-white"
                         data-bs-dismiss="offcanvas"
                         aria-label="Close"
                    ></button>
               </div>
               <div class="offcanvas-body">
                    <!-- Cart form starts here -->
                    <div>
                         <form>
                              <div>
                                   <a
                                        class="btn btn-bd-primary not-toggled"
                                        role="button"
                                        id="toggleCart"
                                        data-bs-toggle="button"
                                   >EDIT CART</a>
                              </div>
                         </form>
                    </div>

                    <div>
                         <form>
                              {{#each cart}}
                                   <div class="card mb-3">
                                        <div class="row g-0">
                                             <div class="col-md-12">
                                                  <div
                                                       class="card-body d-flex flex-column align-items-center justify-content-between"
                                                  >
                                                       <h5 class="card-title mt-auto mb-2">{{product.name}}</h5>
                                                       <div class="d-flex justify-content-between w-100 mb-2">
                                                            <!-- Changed to w-100 -->
                                                            <p class="card-text m-1">Price: {{product.price}}</p>
                                                            <p class="card-text m-1">Qty: {{quantity}}</p>
                                                            <!-- Abbreviated Quantity to Qty -->
                                                            <p class="card-text m-1">Total: ${{multiply
                                                                      product.price
                                                                      quantity
                                                                 }}</p>
                                                       </div>
                                                       <div
                                                            class="d-none d-flex align-items-center"
                                                            data-id="{{product.id}}"
                                                       >
                                                            <label class="me-2">Quantity:</label>
                                                            <input
                                                                 class="quant form-control form-control-sm me-2"
                                                                 id="newQuant{{product.id}}"
                                                                 value="{{quantity}}"
                                                                 type="number"
                                                                 min="0"
                                                            />
                                                            <button
                                                                 type="submit"
                                                                 class="btn btn-bd-edit btn-sm me-2 updateCart"
                                                                 data-id="{{product.id}}"
                                                            >Edit</button>
                                                            <button
                                                                 type="submit"
                                                                 class="btn btn-bd-delete btn-sm"
                                                            >Delete</button>
                                                       </div>
                                                  </div>
                                             </div>

                                        </div>
                                   </div>
                              {{/each}}
                              <button id="checkoutBtn" type="submit">Checkout</button>
                         </form>
                    </div>
                    <!-- Cart form ends here -->
                    <script src="/js/cart.js"></script>
               </div>
          </div>
     </div>
</div>