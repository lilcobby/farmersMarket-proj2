<div class="d-flex" style="width:75%; margin:20%">
     <div class="container d-flex flex-wrap">
          <div class="row align-items-start">
               <div class="col">
                    <h2>Login</h2>

                    <form id="login-form" class="row g-3">
                         <div class="col-md-12">
                              <label for="username-login" class="form-label">Username</label>
                              <input class="form-control" type="text" id="username-login" />
                              <div id="username-login-feedback" class="invalid-feedback"></div>
                         </div>
                         <div class="col-md-12">
                              <label for="password-login" class="form-label">Password</label>
                              <input class="form-control" type="password" id="password-login" />
                              <div id="password-login-feedback" class="invalid-feedback"></div>
                         </div>
                         <div class="col-12">
                              <button class="btn btn-primary" type="submit">Login</button>
                         </div>
                    </form>
               </div>
               <div class="col">
                    <h2>Signup</h2>

                    <form id="signup-form" class="row g-3">
                         <div class="col-md-12">
                              <label for="name-signup" class="form-label">Name</label>
                              <input class="form-control" type="text" id="name-signup" />
                              <div class="invalid-feedback">Username already exists.</div>
                         </div>
                         <div class="col-md-12">
                              <label for="email-signup" class="form-label">Email</label>
                              <input class="form-control" type="text" id="email-signup" />
                              <div class="invalid-feedback">Email already exists.</div>
                         </div>
                         <div class="col-md-12">
                              <label for="password-signup" class="form-label">Password</label>
                              <input class="form-control" type="password" id="password-signup" />
                         </div>
                         <div class="col-12">
                              <div class="form-check">
                                   <input class="form-check-input" type="checkbox" id="checkbox-signup" />
                                   <label class="form-check-label" for="checkbox-signup">Vendor?</label>
                              </div>
                         </div>
                         <div class="col-12">
                              <button class="btn btn-primary" type="submit">Signup</button>
                         </div>
                    </form>
               </div>
          </div>
     </div>
</div>

<script src="/js/login.js"></script>